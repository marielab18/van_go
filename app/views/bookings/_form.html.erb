<div class='container'>
  <div class="card card-calendar">
    <h2>Choose the date</h2>
      <%= simple_form_for [ @van, @booking ] do |f| %>
        <%= f.input :start_date, html5: true %>
        <%= f.input :finish_date, html5: true %>
        <%= f.submit "Book now", class: "btn btn-success" %>
      <% end %>
  </div>
</div>
